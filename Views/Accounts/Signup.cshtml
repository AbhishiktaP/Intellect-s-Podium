                </div>
            </div>
        </div><!--End of categories-container-->
    </div>

    <div class="mentor-container">
        <div class="mentor-sub-container">

        </div>
        <div class="mentor-sub-container-image">
            <img id="join-as-mentor-image" src="~/Images/join-as-mentor-image.jpg">
        </div>
        <div class="mentor-sub-container-info">
            <p>Be a part of our Mentors' Community<br>and help reach thousands of students!</p>
            <button class="search-button">Join as a Mentor</button>
        </div>

    </div>

    <div class="feedback-container">

    </div>

    <div class="partner-institutions">
        <p class="category-heading">“ Trusted by Awesome Partners ”</p>
        <hr>
        <div class="partner-1">
            <img class="srm-logo" src="~/Images/srm-logo.jpg">
        </div>
        <div class="partner-2">
            <img class="cognizant-logo" src="~/Images/cognizant.png">
        </div>
        <div class="partner-3">
            <img class="kiet-logo" src="~/Images/kiet-logo.jpeg">
        </div>
    </div>
    <hr>
</div>

<div class="login-signup">
    <div class="signup-content-box">
        @*<div class="close">+</div>*@
        <div>@Html.ActionLink("+", "IndexLogin", "Accounts", new { @class = "close" }) </div>
        <img class="login-logo" src="~/Images/ip-logo.png" alt="">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="signup-field-col">
                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "signup-field", placeholder = "First Name" } })
                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "validation-text" })

                @Html.EditorFor(model => model.Qualification, new { htmlAttributes = new { @class = "signup-field", placeholder = "Qualification" } })
                @Html.ValidationMessageFor(model => model.Qualification, "", new { @class = "validation-text" })

                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "signup-field", placeholder = "Password" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "validation-text" })
            </div>
            <div class="signup-field-col">
                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "signup-field", placeholder = "Last Name" } })
                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "validation-text" })

                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "signup-field", placeholder = "Email" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "validation-text" })

                @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "signup-field", placeholder = "Confirm your Password" } })
                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "validation-text" })
            </div>
            <button class="btn account-btn"><span class="green-button-text">Create an Account</span></button>
        }@*form ends*@
        <div class="message">
            <p class="account-creation-message">@ViewBag.AccountCreationMessage</p>
        </div>

        <p class="dont-have-an-account">Already have an Account? Login here! | @Html.ActionLink("LOGIN", "Login", "Accounts", new { @class = "redirect-to-login" })</p>
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval");
}
